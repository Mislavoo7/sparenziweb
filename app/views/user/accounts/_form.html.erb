<div class="form-container">
  <%= form_for [:user, current_user], url: user_accounts_path, :html => { class: 'form' } do |f| %>

    <div class="form-body">
      <div class="mt-2">
        <%= f.label :email, class: 'label' %>
        <div class="mt-4">
          <%= f.text_field :email, class: "input" %>
        </div>
        <p> <small> <%= t("devise.change_your_email") %> </small> </p>
      </div>
    </div>

    <div class="form-body">
      <div class="mt-2">
        <%= f.label :password, class: 'label' %>
        <div class="mt-4">
          <%= f.password_field :password, class: "input" %>
        </div>
      </div>
    </div>


    <div class="flex pt-6">
      <%= link_to t('cancel'), user_root_path, class: 'button is-white' %>
      <%= f.submit t("save"), data: { disable_with: t('please_wait') }, class: "button is-primary" %>
    </div>
  <% end %>
</div>

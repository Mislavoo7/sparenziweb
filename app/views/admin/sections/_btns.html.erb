<div class="section-bttn-container">
  <button class="section-bttn" data-sortable-handle>
    <%= phosphor_icon 'arrows-out-cardinal' %>
  </button>
  <%= render "admin/sections/visible_bttn", section: section %>
  <%= link_to edit_admin_page_section_path(@page.id, section), class: "section-bttn" do %>
    <%= phosphor_icon 'pencil-simple', options: { class: '' } %>
    <%= t('edit') %>
  <% end %>
  <%= link_to admin_page_section_path(@page.id, section), class: "section-bttn", method: :delete, data: { confirm: t('are_you_sure') }, remote: true do %>
    <%= phosphor_icon 'trash-simple', options: { class: '' } %>
    <%= t('delete') %>
  <% end %>
</div>

<% links = content_for?(:links) ? JSON.parse(yield(:links)) : [] %>
<% unless links.blank? %>
  <nav aria-label="Breadcrumb" class="pt-8 pb-6 border-b-2">
    <ol role="list" class="flex items-center space-x-4">
      <% links.each do |link| %>
        <li>
          <div class="flex items-center">
            <%= link_to raw("#{link["title"]}&nbsp;"), link["url"] %>
            <svg viewBox="0 0 6 20" aria-hidden="true" class="h-5 w-auto text-gray-600">
              <path d="M4.878 4.34H3.551L.27 16.532h1.327l3.281-12.19z" fill="currentColor" />
            </svg>
          </div>
        </li>
      <% end %>
      <ol>
  </nav>
<% end %>

<%= form_for [:admin, @admin], :html => { class: 'form' } do |f| %>
  <div class="form-body">
    <div class="">
      <%= f.label :email, class: 'label' %>
      <div class="mt-2">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
      </div>
    </div>
  </div>

  <div class="flex pt-6">
    <%= link_to t('cancel'), admin_admins_path, class: 'button is-white' %>
    <%= f.submit t("save"), data: { disable_with: t('please_wait') }, class: "button is-primary" %>
  </div>
<% end %>

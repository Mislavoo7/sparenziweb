production:
  adapter: postgresql
  encoding: utf8
  database: <%= ENV.fetch('DATABASE_NAME', 'sparenziweb_production') %>
  host: <%= ENV.fetch('DATABASE_HOST', 'localhost') %>
  pool: <%= ENV.fetch('DATABASE_POOL', '5') %>
  username: <%= ENV.fetch('DATABASE_USER', 'sparenziweb') %>
  password: xxxxxxxxxxxxxxx
  # Note: If DATABASE_URL is set, it will override the above settings
  url: <%= ENV['DATABASE_URL'] %>
